{
	"tags"      : {
		"allowUnknownTags" : true
	},
  "source": {
    "include": ["./lib", "./README.md"],
    "includePattern": ".+\\.js(doc)?$",
    "excludePattern": "docs"
  },
	"plugins"   : ["plugins/markdown"],
	"templates" : {
		"cleverLinks"     : false,
		"monospaceLinks"  : false,
		"default"         : {
			"outputSourceFiles" : true
		},
		"systemName"      : "node-pm",
		"footer"          : "",
		"copyright"       : "Sazze, Inc Copyright Â© 2012-2013",
		"navType"         : "vertical",
		"theme"           : "cerulean",
		"linenums"        : true,
		"collapseSymbols" : false,
		"inverseNav"      : true
	},
	"markdown"  : {
		"parser"   : "gfm",
		"hardwrap" : true
	},
  "opts": {
    "template": "docs/template",
    "destination": "docs",
    "recurse": true,
    "private": true
  }
}
